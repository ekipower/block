{% block block %}

{% set refId = block.id|replace({'/': '-'}) %}

<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#block{{ refId }}">
	{{ "eki_block.feedback.form.toggle_title"|trans }}
</button>
 
<div class="modal fade" id="block{{ refId }}" role="dialog" aria-labelledby="block-title{{ refId }}" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			{{ form_start( form ) }}

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="block-title{{ refId }}">{{ "eki_block.feedback.form.main_title"|trans }}</h4>
			</div>
		
			<div class="modal-body">
			
				{{ form_errors( form, { 'global_errors': true } ) }}

				<div class="form-group row">
					{{ form_label( form.fullName, null, { 'label_attr': {'class': 'col-sm-3 form-control-label'} } ) }}
					<div class="col-sm-9">
						{{ form_widget( form.fullName, { 'attr': { 'class': 'form-control' } } ) }}
						{{ form_errors(form.fullName) }}
					</div>
				</div>

				<div class="form-group row">
					{{ form_label( form.email, null, { 'label_attr': {'class': 'col-sm-3 form-control-label'} } ) }}
					<div class="col-sm-9">
						{{ form_widget( form.email, { 'attr': { 'class': 'form-control' } }) }}
						{{ form_errors(form.email) }}
					</div>
				</div>

				<div class="form-group row">
					{{ form_label( form.subject, null, { 'label_attr': {'class': 'col-sm-3 form-control-label'} } ) }}
					<div class="col-sm-9">
						{{ form_widget( form.subject, { 'attr': { 'class': 'form-control' } }) }}
						{{ form_errors(form.subject) }}
					</div>
				</div>

				<div class="form-group row">
					{{ form_label( form.message, null, { 'label_attr': {'class': 'col-sm-3 form-control-label'} } ) }}
					<div class="col-sm-9">
						{{ form_widget( form.message, { 'attr': { 'class': 'form-control' } } ) }}
						{{ form_errors(form.message) }}
					</div>
				</div>

				<div class="form-group row">
					<div class="col-sm-offset-3 col-sm-9">
						{{ form_row( form.send, { 'attr': { 'class': 'btn btn-primary' } } ) }}
					</div>
				</div>
				
			</div>
		
			<div class="modal-footer">
				<div class="form-group row">
					<div class="col-sm-offset-2 col-sm-9">
						{{ form_row( form.send, { 'attr': { 'class': 'btn btn-primary' } } ) }}
					</div>
				</div>
			</div>

			{{ form_end( form ) }}
		</div>
	</div>
</div>
 
{% endblock %}
