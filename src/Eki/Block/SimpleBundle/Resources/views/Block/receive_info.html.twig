{% block block %}

{% set refId = block.id|replace({'/': '-'}) %}

<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#block{{ refId }}">
	{{ "eki_block.receive_info.form.toggle_title"|trans }}
</button>
 
<div class="modal fade" id="block{{ refId }}" role="dialog" aria-labelledby="block-title{{ refId }}" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			{{ form_start( form, { 'attr': { 'class': 'form-inline' } } ) }}

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="block-title{{ refId }}">{{ "eki_block.receive_info.form.main_title"|trans }}</h4>
			</div>
		
			<div class="modal-body">
			
				{{ form_errors( form, { 'global_errors': true } ) }}

				<div class="form-group">
					{{ form_label( form.email, null, { 'label_attr': {'class': 'sr-only'} } ) }}
					{{ form_widget( form.email, { 'attr': { 'class': 'form-control' } }) }}
				</div>

				<div class="form-group">
					{{ form_row( form.send, { 'attr': { 'class': 'btn btn-primary' } } ) }}
				</div>
				
			</div>
		
			<div class="modal-footer">
			</div>

			{{ form_end( form ) }}
		</div>
	</div>
</div>
 
{% endblock %}
